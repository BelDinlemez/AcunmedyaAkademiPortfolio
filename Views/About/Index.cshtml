@model List<AcunmedyaAkademiPortfolio.Models.TblAbout>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2>Hakkımda</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Açıklama</th>
        <th>Başlık</th>
        <th>Doğum Günü</th>
        <th>Telefon Numarası</th>
        <th>Şehir</th>
        <th>Yaş</th>
        <th>Diploma</th>
        <th>Email</th>
        <th>Freelance</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.name</td>
            <td>@item.description</td>
            <td>@item.title</td>
            <td>@item.birthday</td>
            <td>@item.phone</td>
            <td>@item.city</td>
            <td>@item.age</td>
            <td>@item.degree</td>
            <td>@item.email</td>
            <td>@item.freelance</td>
            <td>@item.imgUrl</td>
            <td><a href="/About/DeleteAbout/@item.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/About/UpdateAbout/@item.id" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<td><a href="/About/AddAbout" class="btn btn-primary">Yeni Hakkında Ekle</a></td>


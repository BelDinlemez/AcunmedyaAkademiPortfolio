@model AcunmedyaAkademiPortfolio.Models.TblSkill
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2>Yetenek Güncelle</h2>

<form method="post">

    @Html.HiddenFor(x => x.SkillId)

    <label>Yetenek İsmi</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

    <label>Yetenek Oranı</label>
    @Html.TextBoxFor(x => x.Percentage, new { @class = "form-control" })



    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>


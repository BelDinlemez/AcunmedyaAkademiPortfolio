@model List<AcunmedyaAkademiPortfolio.Models.TblAbout>

@foreach (var item in Model)
{

    <section id="about" class="about section">


        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Hakkımda</h2>
            <p>@item.description</p>
        </div><!-- End Section Title -->



        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row gy-4 justify-content-center">

                <div class="col-lg-4">
                    <img src="/Templates/iPortfolio-1.0.0/assets/img/@item.imgUrl" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 content">
                    <h2>@item.title</h2>
                  
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>@item.birthday</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@item.website</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Numara:</strong> <span>@item.phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Konum:</strong> <span>@item.city</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@item.age</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Diploma:</strong> <span>@item.degree</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@item.freelance</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </section>
}